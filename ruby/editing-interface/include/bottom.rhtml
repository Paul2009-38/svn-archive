  }


  //--></script>
  

</center>
</div>
<% if alltags != [] %>
<div class="optionalbox">
  <span class="oboxheader">tags</span><br /><br />
  
  <% 
  
    alltags.uniq.each do |tag| %>
        <a href="/traces/tag/<%=tag%>" title="find traces with tag <%=tag%>"><%=tag%></a><br />
        <% 
    end 
 
        
        %>
      </div>
      
      <% if loggedin %>
<div class="optionalbox">
<span class="oboxheader">User</span><br /><br />

      <% 
      if cgi['dn_action'] == 'savedisplayname'
        saved = dao.save_display_name(user_id, cgi['display_name'])
        if saved
          user = dao.details_from_user_id(user_id)
        else
        %>
        Sorry, that name is in use.
        <%
        end
        end

        if user['display_name'] == ''
        %>
        <i>Your display name is blank. If you make a display name then people will be able to link to your gps traces using it.</i><br /><br />
        <%
        end
        %>

  <form action="/traces/mine" method="get">
    display name:<br />
    <input type="text" name="display_name" size="10" maxlength="255" value="<%=user['display_name']%>" /><input type="submit" value="save" />
    <input type="hidden" name="dn_action" value="savedisplayname" />
  </form>
</div>
<% end %>
<% end %>

<div id="cclogo">
  <center>
    <a href="http://creativecommons.org/licenses/by-sa/2.0/"><img src="/images/somerights20.png" border="0"></a>
  </center>
</div>

</div>

<script type="text/javascript">
	if ((lat != undefined) && (lon != undefined) && (zoom != undefined)) {
		updatelinks(lon,lat,zoom);
	}
</script>

</body>
