<Layer name="facilities" status="on" srs="&osm2pgsql_projection;">
  <StyleName>facilities</StyleName>
  <Datasource>
    <Parameter name="table">
    (select *
    from &prefix;_point
    where amenity is not null
       or sport is not null
       or "natural" in ('spring')
       or waterway='water_point'
       or railway in ('station','subway_entrance','halt','stop')
       or tourism in ('museum','attraction','hotel','motel')
       or leisure in ('playground','marina','slipway')
    ) as facilities</Parameter>
    &datasource-settings;
  </Datasource>
</Layer>
<Layer name="facilities-poly" status="on" srs="&osm2pgsql_projection;">
  <StyleName>facilities</StyleName>
  <Datasource>
    <Parameter name="table">
    (select *
    from &prefix;_polygon
    where amenity is not null
       or sport is not null
       or tourism in ('museum','attraction','hotel','motel')
       or leisure in ('playground','marina')
    ) as facilities</Parameter>
    &datasource-settings;
  </Datasource>
</Layer>
