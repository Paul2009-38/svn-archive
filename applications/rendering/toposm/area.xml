<Layer name="builtup" status="on" srs="+proj=merc +datum=WGS84 +over">
    <StyleName>builtup</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">geodata/osm/world_boundaries/builtup_area</Parameter>
    </Datasource>
</Layer>

<Layer name="nhdarea" srs="+proj=latlong +datum=WGS84">
	<StyleName>washes</StyleName>
	<Datasource>
		&dbsettings; &extentsLatLon;
		<Parameter name="table">(select way, ftype from nhdarea) as nhdarea</Parameter>
	</Datasource>
</Layer>

<Layer name="nhdwaterbodyUpper" srs="+proj=latlong +datum=WGS84">
	<StyleName>ice</StyleName>
	<Datasource>
		&dbsettings; &extentsLatLon;
		<Parameter name="table">(select way, ftype from nhdwaterbody) as nhdwaterbody</Parameter>
	</Datasource>
</Layer>

<Layer name="polygons" status="on">
    <StyleName>areafeatures</StyleName>
    <Datasource>
		&dbsettings; &extents;
		<Parameter name="table">(select * from us_osm_polygon order by z_order,way_area desc) as polygons</Parameter>
    </Datasource>
</Layer>

